<%- include('../partials/head.ejs') %>

    <body>
        <!-- ```````````````````````HEADER```````````````````````  -->
        <%- include('../partials/header.ejs') %>
            <!-- ```````````````````````BODY```````````````````````  -->
            <section class="body">
                <section class="detailHolder">
                    <div class="activitydetail">
                        <h1>
                            <%=eventhandle.conTitle  %>
                        </h1>
                        <div class="instructions ">
                            <figure>
                                <img class="fig-img" src="<%= eventhandle.conImgURL  %>" alt="<%= eventhandle.conTitle %>">
                            </figure>
                            <ul>
                                <li>Host :
                                    <%= eventhandle.conHost  %>
                                </li>
                                <li>Date :
                                    <%= eventhandle.conDate  %>
                                </li>
                                <li> Start:
                                    <%= eventhandle.conStart  %>
                                </li>
                                <li>End:
                                    <%= eventhandle.conEnd  %>
                                </li>
                                <li>Location :
                                    <%= eventhandle.conLocation  %>
                                </li>
                            </ul>
                        </div>
                        <div class="time">
                            <h1>Details:</h1>
                            <p>
                                <%=  eventhandle.conDetails  %>
                            </p>
                        </div>
                    </div>
                    <div class="attending">
                        <% if( user !==null && eventhandle !== null && eventhandle.user._id  == user.id ) {%>
                            <form>
                                <button type="submit" formmethod="GET" formaction="/connection/<%= eventhandle._id%>/update">Edit</button>
                                <button type="submit" formmethod="POST" formaction="/connection/<%= eventhandle._id%>?_method=DELETE">Delete</button>
                            </form>
                            <%}else{%>
                                <h1>ARE YOU GOING?</h1>
                                <ul class="buttons">
                                    <li>
                                        <a class="yes" href="/savedconnections">YES</a>
                                    </li>
                                    <li>
                                        <a class="no" href="/SavedConnections">NO</a>
                                    </li>
                                    <li>
                                        <a class="maybe" href="/SavedConnections">MAYBE</a>
                                    </li>
                                </ul>
                                <% } %>
                    </div>
                </section>
            </section>
            <!-- ```````````````````````FOOTER```````````````````````  -->
            <%- include('../partials/footer.ejs')  %>
    </body>

    </html>